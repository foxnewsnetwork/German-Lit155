<!-- Simple rumor search -->
<!-- location, ip -->
<% if remote %>
	<%= form_tag( root_path, :method => "get" , :remote => true) do %>
		<%= hidden_field_tag "search[type]", "simple" %>
		<%= hidden_field_tag "search[latitude]", location[:lat] %>
		<%= hidden_field_tag "search[longitude]", location[:lng] %>
		<%= hidden_field_tag "search[ip]", ip %>
		<%= search_field_tag('search[name]', nil, :placeholder => "First name Last name") %>
		<%= submit_tag 'Search »', :class => "submit_once_button btn primary" %>
	<% end %>
<% else %>
	<%= form_tag( root_path, :method => "get") do %>
		<%= hidden_field_tag "search[type]", "simple" %>
		<%= hidden_field_tag "search[latitude]", location[:lat] %>
		<%= hidden_field_tag "search[longitude]", location[:lng] %>
		<%= hidden_field_tag "search[ip]", ip %>
		<%= search_field_tag('search[name]', nil, :placeholder => "First name Last name") %>
		<%= submit_tag 'Search »', :class => "submit_once_button btn primary" %>
	<% end %>
<% end %>
<%= submit_tag("Advanced Search...", :class => "advanced_search btn primary" ) %>

