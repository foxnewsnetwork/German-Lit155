<%= form_for root_path do %>
	<%= hidden_field_tag "rumor[type]", "advanced" %>
	<%= hidden_field_tag "rumor[latitude]", location[:lat] %>
	<%= hidden_field_tag "rumor[longitude]", location[:lng] %>
	<%= hidden_field_tag "rumor[ip]", ip %>
	<%= label_tag "Name: " %>
	<%= text_field_tag "rumor[name]" %>
	<br />
	<%= label_tag "Phone: " %>
	<%= telephone_field_tag "rumor[phone]" %>
	<br />
	<%= label_tag "Email: " %>
	<%= email_field_tag "rumor[email]" %>
	<br />
	<%= label_tag "Gender: " %>
	<%= label_tag "male" %>
	<%= radio_button_tag "rumor[gender]", "male" %>
	<%= label_tag "female" %>
	<%= radio_button_tag "rumor[gender]", "female" %>
	<br />
	<%= label_tag "Birthdate: " %>
	<%= select_month Date.today, :include_blank => true, :field_name => "search[birthmonth]", :prompt => "Select month" %>
	<%= select_day Date.today, :include_blank => true, :field_name => "search[birthday]", :prompt => "Select day" %>
	<%= select_year Date.today, :include_blank => true, :field_name => "search[year]", :prompt => "Select year", :start_year => Date.new( 1920 ), :end_year => Date.today %>
	<br />
	<%= label_tag "Address: " %>
	<%= text_field_tag "rumor[address]" %>
	<br />
	<%= label_tag :content %>
	<%= text_area :rumor, :content, :size => "40x5" %>
	<br />
	<%= submit_tag "Create Rumor!" %>
<% end %>

